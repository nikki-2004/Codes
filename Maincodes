package org.example.service;

import jakarta.annotation.PostConstruct;
import org.example.model.ReportData;
import org.example.repository.ReportRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

@Service
public class ReportService {

    @Autowired
    private ReportRepository reportRepository;

    @PostConstruct
    public void loadCsvData() {
        String filePath = "C:\\new\\merged_output.csv";

        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
            String line;

            // Skip the first row (CSV Header)
            boolean isFirstLine = true;

            while ((line = br.readLine()) != null) {
                if (line.trim().isEmpty()) continue;

                // Skip the header
                if (isFirstLine) {
                    isFirstLine = false;
                    continue;
                }

                // Split line by comma
                String[] fields = line.split(",", -1);

                // Ensure minimum expected fields
                if (fields.length >= 1) {
                    ReportData data = new ReportData();

                    // Set fields in exact order:
                    data.setCrsCode(fields.length > 0 ? fields[0] : null);
                    data.setRegAddress(fields.length > 1 ? fields[1] : null);
                    data.setRegCountry(fields.length > 2 ? fields[2] : null);
                    data.setSiteBnppEntity(fields.length > 3 ? fields[3] : null);
                    data.setSiteCountry(fields.length > 4 ? fields[4] : null);
                    data.setSiteStatus(fields.length > 5 ? fields[5] : null);
                    data.setKycSegment(fields.length > 6 ? fields[6] : null);
                    data.setRIC(fields.length > 7 ? fields[7] : null);

                    // Save to DB
                    reportRepository.save(data);
                }
            }

            System.out.println("CSV Loaded successfully.");

        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
