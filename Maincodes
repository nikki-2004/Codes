package org.example.repository;

import org.example.model.ReportData;
import org.junit.jupiter.api.Test;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.autoconfigure.orm.jpa.DataJpaTest;

import java.util.Optional;

import static org.assertj.core.api.Assertions.assertThat;

@DataJpaTest
class ReportRepositoryTest {

    @Autowired
    private ReportRepository reportRepository;

    @Test
    void shouldSaveAndFindReportData() {
        ReportData report = new ReportData();
        report.setCrsCode("CRS123");
        report.setRegAddress("123 Street");
        report.setRegCountry("India");

        ReportData saved = reportRepository.save(report);

        Optional<ReportData> found = reportRepository.findById(saved.getId());

        assertThat(found).isPresent();
        assertThat(found.get().getCrsCode()).isEqualTo("CRS123");
        assertThat(found.get().getRegAddress()).isEqualTo("123 Street");
        assertThat(found.get().getRegCountry()).isEqualTo("India");
    }
}
