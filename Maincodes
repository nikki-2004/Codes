public class CsvImportUtil {

    public static List<MergedEntity> readFromCsv(String filePath) {
        List<MergedEntity> list = new ArrayList<>();
        try (BufferedReader br = new BufferedReader(new FileReader(filePath))) {
            String line;
            boolean headerSkipped = false;
            while ((line = br.readLine()) != null) {
                if (!headerSkipped) {
                    headerSkipped = true;
                    continue;
                }
                String[] values = line.split(",", -1); // -1 to keep empty fields
                MergedEntity entity = new MergedEntity();
                entity.setPtyId(values[0]);
                entity.setSiteCountry(values[1]);
                entity.setSiteStatus(values[2]);
                entity.setKycSegment(values[3]);
                entity.setRicCode(values[4]);
                entity.setRicDesc(values[5]);
                list.add(entity);
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
        return list;
    }
}
