@RestController
@RequestMapping("/api")
public class MergedEntityController {

    private final DataService dataService;

    public MergedEntityController(DataService dataService) {
        this.dataService = dataService;
    }

    @GetMapping("/merged-entities")
    public List<MergedEntity> getAllMergedEntities() {
        return dataService.getMergedEntities();
    }
}
