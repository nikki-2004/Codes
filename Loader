private String fetchAuthToken() {
    try {
        HttpHeaders headers = new HttpHeaders();
        headers.setContentType(MediaType.APPLICATION_JSON);

        Map<String, String> body = new HashMap<>();
        body.put("client_id", clientId);
        body.put("client_secret", clientSecret);
        body.put("grant_type", "client_credentials");

        HttpEntity<Map<String, String>> entity = new HttpEntity<>(body, headers);

        ResponseEntity<String> response = restTemplate.postForEntity(authTokenUrl, entity, String.class);
        JsonNode json = objectMapper.readTree(response.getBody());

        return json.path("access_token").asText(); // ‚Üê returned token
    } catch (Exception e) {
        throw new RuntimeException("Failed to fetch auth token: " + e.getMessage(), e);
    }
}
